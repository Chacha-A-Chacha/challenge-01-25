generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id               String    @id @default(cuid())
  email            String    @unique
  password         String
  createdAt        DateTime  @default(now())
  resetToken       String?
  resetTokenExpiry DateTime?

  @@map("admins")
}

model Course {
  id            String                @id @default(cuid())
  name          String
  headTeacherId String                @unique
  endDate       DateTime?
  status        CourseStatus          @default(ACTIVE)
  createdAt     DateTime              @default(now())
  classes       Class[]
  headTeacher   Teacher               @relation("HeadTeacher", fields: [headTeacherId], references: [id])
  registrations StudentRegistration[]
  teachers      Teacher[]             @relation("CourseTeachers")

  @@map("courses")
}

model Teacher {
  id                    String                @id @default(cuid())
  email                 String                @unique
  password              String
  courseId              String?
  role                  TeacherRole           @default(ADDITIONAL)
  createdAt             DateTime              @default(now())
  resetToken            String?
  resetTokenExpiry      DateTime?
  isDeleted             Boolean               @default(false)
  deletedAt             DateTime?
  attendanceRecords     Attendance[]
  headCourse            Course?               @relation("HeadTeacher")
  approvedRequests      ReassignmentRequest[]
  reviewedRegistrations StudentRegistration[]
  course                Course?               @relation("CourseTeachers", fields: [courseId], references: [id], onDelete: SetNull)

  @@index([courseId])
  @@index([isDeleted])
  @@map("teachers")
}

model Class {
  id        String    @id @default(cuid())
  name      String
  capacity  Int
  courseId  String
  createdAt DateTime  @default(now())
  course    Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  sessions  Session[]
  students  Student[]

  @@index([courseId])
  @@map("classes")
}

model Session {
  id                  String                @id @default(cuid())
  classId             String
  day                 WeekDay
  startTime           String                // Format: "HH:MM:SS" (24-hour)
  endTime             String                // Format: "HH:MM:SS" (24-hour)
  capacity            Int
  createdAt           DateTime              @default(now())
  attendances         Attendance[]
  fromRequests        ReassignmentRequest[] @relation("FromSession")
  toRequests          ReassignmentRequest[] @relation("ToSession")
  class               Class                 @relation(fields: [classId], references: [id], onDelete: Cascade)
  pendingSaturdayRegs StudentRegistration[] @relation("RegSaturdaySession")
  pendingSundayRegs   StudentRegistration[] @relation("RegSundaySession")
  saturdayStudents    Student[]             @relation("SaturdayStudents")
  sundayStudents      Student[]             @relation("SundayStudents")

  @@index([classId])
  @@index([classId, day])
  @@map("sessions")
}

model Student {
  id                   String                @id @default(cuid())
  uuid                 String                @unique @default(cuid())
  studentNumber        String                @unique
  surname              String
  firstName            String
  lastName             String?
  email                String                @unique
  phoneNumber          String?
  classId              String
  saturdaySessionId    String?
  sundaySessionId      String?
  createdAt            DateTime              @default(now())
  password             String
  resetToken           String?
  resetTokenExpiry     DateTime?
  isDeleted            Boolean               @default(false)
  deletedAt            DateTime?
  attendances          Attendance[]
  reassignmentRequests ReassignmentRequest[]
  class                Class                 @relation(fields: [classId], references: [id], onDelete: Restrict)
  saturdaySession      Session?              @relation("SaturdayStudents", fields: [saturdaySessionId], references: [id], onDelete: Restrict)
  sundaySession        Session?              @relation("SundayStudents", fields: [sundaySessionId], references: [id], onDelete: Restrict)

  @@index([classId])
  @@index([isDeleted])
  @@index([isDeleted, classId])
  @@map("students")
}

model StudentRegistration {
  id                String             @id @default(cuid())
  surname           String
  firstName         String
  lastName          String?
  email             String             @unique
  phoneNumber       String?
  courseId          String
  saturdaySessionId String
  sundaySessionId   String
  password          String
  paymentReceiptUrl String
  paymentReceiptNo  String
  status            RegistrationStatus @default(PENDING)
  reviewedById      String?
  reviewedAt        DateTime?
  rejectionReason   String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  course            Course             @relation(fields: [courseId], references: [id], onDelete: Restrict)
  reviewedBy        Teacher?           @relation(fields: [reviewedById], references: [id], onDelete: SetNull)
  saturdaySession   Session            @relation("RegSaturdaySession", fields: [saturdaySessionId], references: [id], onDelete: Restrict)
  sundaySession     Session            @relation("RegSundaySession", fields: [sundaySessionId], references: [id], onDelete: Restrict)

  @@index([status])
  @@index([courseId])
  @@index([status, courseId])
  @@map("student_registrations")
}

model Attendance {
  id        String           @id @default(cuid())
  studentId String
  sessionId String
  date      DateTime
  status    AttendanceStatus
  scanTime  DateTime?
  teacherId String?
  session   Session          @relation(fields: [sessionId], references: [id], onDelete: Restrict)
  student   Student          @relation(fields: [studentId], references: [id], onDelete: Restrict)
  markedBy  Teacher?         @relation(fields: [teacherId], references: [id], onDelete: SetNull)

  @@unique([studentId, sessionId, date])
  @@index([date])
  @@index([status])
  @@index([sessionId])
  @@index([date, sessionId])
  @@index([studentId, date])
  @@map("attendances")
}

model ReassignmentRequest {
  id            String        @id @default(cuid())
  studentId     String
  fromSessionId String
  toSessionId   String
  status        RequestStatus @default(PENDING)
  requestedAt   DateTime      @default(now())
  teacherId     String?
  fromSession   Session       @relation("FromSession", fields: [fromSessionId], references: [id], onDelete: Cascade)
  student       Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  approvedBy    Teacher?      @relation(fields: [teacherId], references: [id], onDelete: SetNull)
  toSession     Session       @relation("ToSession", fields: [toSessionId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([studentId])
  @@map("reassignment_requests")
}

enum CourseStatus {
  ACTIVE
  INACTIVE
  COMPLETED
}

enum TeacherRole {
  HEAD
  ADDITIONAL
}

enum WeekDay {
  SATURDAY
  SUNDAY
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  WRONG_SESSION
}

enum RequestStatus {
  PENDING
  APPROVED
  DENIED
}

enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
  EXPIRED
}
